# Test Environment Variables
SERVICE_NAME=test-school-management-system
USER_PORT=3006
ADMIN_PORT=3007
NODE_ENV=test

# MongoDB Configuration for Testing
MONGO_URI=mongodb://localhost:27017/school_management_test

# Redis Configuration for Testing
# Using memory store for testing
CACHE_REDIS=
CACHE_PREFIX=test_cache_

# Redis for Oyster DB
OYSTER_REDIS=
OYSTER_PREFIX=test_oyster_

# Redis for Cortex (State Management)
CORTEX_REDIS=
CORTEX_PREFIX=test_cortex_
CORTEX_TYPE=memory

# JWT Token Secrets for Testing
LONG_TOKEN_SECRET=test-long-token-secret-for-testing-32chars
SHORT_TOKEN_SECRET=test-short-token-secret-for-testing-32chars
NACL_SECRET=test-nacl-secret-for-testing-32chars

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=20